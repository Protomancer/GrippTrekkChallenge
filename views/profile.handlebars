<div class="row">
  <div class="col-auto">
    <h2>Welcome!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Hike:</h3>
    <form class="col s12 new-hike-form">
      <div class="row">

        <div class="row">
          <div class="col s6">
            <input placeholder="Name" id="hike-name" type="text" class="validate">
            <label for="hike-name">Hike Name</label>
          </div>
        </div>

      </div>
      <div class="row">

        <div class="row">
          <div class="col s6">
            <input placeholder="Hours" id="hike-time" type="text" class="validate">
            <label for="hike-time">Completion Time</label>
          </div>
        </div>

      </div>
      <div class="row">

        <div class="row">
          <div class="col s6">
            <input placeholder="Feet" id="elevation-change" type="text" class="validate">
            <label for="hike-elevation">Elevation Change</label>
          </div>
        </div>
         <div class="row">
          <div class="col s6">
            <input placeholder="Miles" id="hike-length" type="text" class="validate">
            <label for="hike-length">Length of Hike</label>
          </div>
        </div>

        <button class="waves-effect waves-light btn" type="submit" name="action">Add Hike</button>

      </div>
    </form>


    {{#if hikes.length}}
    <div class="col-md-6 hike-list">
      <h3>Current Hikes:</h3>

      {{#each hikes as |hike|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a href="/hike/{{hike.id}}">{{hike.hikeName}}</a></h4>
        </div>
        <div class="col-md-4">
          <button class="waves-effect waves-light btn" data-id="{{hike.id}}">Delete</button>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div>

  <script src="./js/profile.js"></script>